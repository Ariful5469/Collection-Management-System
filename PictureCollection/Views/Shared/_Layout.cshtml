<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MyCollection</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dark.css" id="darkTheme" />
    <link rel="stylesheet" href="~/css/light.css" id="lightTheme" />
    <script src="~/js/theme.js"></script>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Post" asp-action="Create">Create Post</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Profile" asp-action="Index">Profile</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="Admin" asp-action="ManageUsers">Admin</a></li>
                    }
                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                }
            </ul>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
</body>
</html>
