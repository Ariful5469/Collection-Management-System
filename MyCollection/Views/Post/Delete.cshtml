@model MyCollection.Models.Post

<h2>Are you sure you want to delete this post?</h2>
<form asp-action="Delete" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" readonly />
    </div>
    <div>
        <label>Content</label>
        <textarea asp-for="Content" readonly></textarea>
    </div>
    <button type="submit">Delete</button>
</form>
