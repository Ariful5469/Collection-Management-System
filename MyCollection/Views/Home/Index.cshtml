@model IEnumerable<MyCollection.Models.Post>

<h2>Recent Posts</h2>

<ul>
    @foreach (var post in Model)
    {
        <li>
            <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id">@post.Title</a>
            <p>@post.Content</p>
            <p>Created at: @post.CreatedAt</p>
        </li>
    }
</ul>
