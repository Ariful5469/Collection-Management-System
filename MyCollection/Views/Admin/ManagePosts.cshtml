@model IEnumerable<MyCollection.Models.Post>

<h2>Manage Posts</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt</td>
                <td>
                    <a asp-action="DeletePost" asp-route-id="@post.Id">
                        <button>Delete</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
